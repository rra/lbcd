#
#

srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@

DEFS = @DEFS@
LIBS = @LIBS@
CFLAGS = -O

SHELL = /bin/sh

HDRS = config.h get_load.h get_time.h get_user.h kernel.h proto_client.h \
    proto_server.h protocol.h util.h

SRCS = $(srcdir)/lbcd.c $(srcdir)/proto_server.c $(srcdir)/kernel.c \
       $(srcdir)/util.c $(srcdir)/get_time.c  $(srcdir)/get_load.c \
       $(srcdir)/get_user.c

OBJS = lbcd.o proto_server.o kernel.o util.o get_time.o \
           get_load.o get_user.o

all: @PROGS@

.c.o:
	$(CC) -c -I. -I$(srcdir) $(CPPFLAGS) $(DEFS) $(CFLAGS) $<

lbcd: $(OBJS)
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(LIBS)



