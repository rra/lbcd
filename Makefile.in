#
# Makefile.in for lbcd
#

CC     = @CC@

DEFS   = @DEFS@
LIBS   = @LIBS@
CFLAGS = @CFLAGS@

srcdir = @srcdir@
VPATH  = @srcdir@

SHELL  = /bin/sh

HDRS   = config.h lbcd.h proto_server.h protocol.h util.h

SRCS   = lbcd.c proto_server.c kernel.c util.c get_user.c

OBJS = $(SRCS:.c=.o)

all: lbcd

.c.o:
	$(CC) -c -I. -I$(srcdir) $(DEFS) $(CFLAGS) $<

lbcd: $(OBJS)
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(LIBS)

clean:
	-rm -f *.o core lbcd

distclean: clean
	-rm -f Makefile config.log config.status config.cache
